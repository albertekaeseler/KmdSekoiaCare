<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jmc.kmdsekoiacarepath.Controllers.Employee.SendAnsøgningController">
    <VBox layoutX="44.0" layoutY="45.0" prefHeight="660.0" prefWidth="748.0" spacing="10.0" AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="45.0">
        <!-- Job Title Label -->
        <Label fx:id="jobTitleLabel" text="Job Title" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <!-- Job Description TextArea -->
        <TextArea fx:id="jobDescriptionArea" editable="false" wrapText="true" prefHeight="100.0" />

        <!-- Applicant Name -->
        <Label text="Your Name:" />
        <TextField fx:id="applicantNameField" promptText="Enter your name" />

        <!-- Applicant Email -->
        <Label text="Your Email:" />
        <TextField fx:id="applicantEmailField" promptText="Enter your email" />

        <!-- Submit Button -->
        <Button fx:id="submitButton" text="Send Ansøgning" />

        <!-- Error Label -->
        <Label fx:id="errorLabel" textFill="red" />
    </VBox>
</AnchorPane>
